<h1>Listing Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Start at</th>
      <th>End at</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for block <- @blocks do %>
    <tr>
      <td><%= block.block.start_at %></td>
      <td><%= block.block.end_at %></td>

      <td>
        <span><%= link "Show", to: Routes.block_path(@conn, :show, block.block) %></span>
        <span><%= link "Edit", to: Routes.block_path(@conn, :edit, block.block) %></span>
        <span><%= link "Delete", to: Routes.block_path(@conn, :delete, block.block), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Block", to: Routes.block_path(@conn, :new) %></span>
